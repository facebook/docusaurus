{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**"]
}
