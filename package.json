{
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "website-1.x"
  ],
  "scripts": {
    "prettier": "prettier --config .prettierrc --write \"**/*.js\"",
    "prettier:diff": "prettier --config .prettierrc --list-different \"**/*.js\"",
    "lint": "eslint --cache \"**/*.js\"",
    "lerna": "lerna",
    "test": "jest"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-0",
    "babel-eslint": "8",
    "eslint": "4.x",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^0.0.0",
    "filepath": "^1.1.0",
    "front-matter": "^2.3.0",
    "glob-promise": "^3.3.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "rimraf": "^2.6.2"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "yarn lint --fix",
        "yarn prettier",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
